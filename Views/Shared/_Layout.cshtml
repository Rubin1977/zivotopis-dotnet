<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Google Fonts: Roboto -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <!-- Dynamický názov stránky -->
    <title>@ViewBag.Title</title>

    <!-- Bootstrap CSS (lokálne) -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-theme.min.css" rel="stylesheet" />

    <!-- Vlastné štýly -->
    @Styles.Render("~/Styles/stylymojhowebu.css?v4")

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/images/Rastik.jpg" />

    <!-- jQuery + Validácia (lokálne) -->
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

    <!-- Bootstrap JS (lokálne) -->
    <script src="~/Scripts/bootstrap.min.js" defer></script>

    <!-- Modernizr (voliteľne aktivovať) -->
    @* @Scripts.Render("~/bundles/modernizr") *@
</head>

<body>
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Content("~/")"><img src="@Url.Content("~/Images/RastiRuzbacky.jpg")" alt="Profilová fotka Rastislav Ružbacký" /></a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Uvod" ? "active" : "")">
                        <a href="@Url.Action("Uvod", "Home")">Úvod</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["action"].ToString() == "OsobneUdaje" ? "active" : "")">
                        <a href="@Url.Action("OsobneUdaje", "Home")">Osobné údaje</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Vzdelanie" ? "active" : "")">
                        <a href="@Url.Action("Vzdelanie", "Home")">Vzdelanie</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["action"].ToString() == "Kontakt" ? "active" : "")">
                        <a href="@Url.Action("Kontakt", "Home")">Kontakt</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Pacient" ? "active" : "")">
                        <a href="@Url.Action("Index", "Pacient")">Pacienti</a>
                    </li>

                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>
    <div class="container">
        <div class="page-body">
            @RenderBody()
        </div>
    </div>
    @*<div class="container">*@
    <footer>
        <div class="footer">
            <div class="container text-center py-3">
                <div class="row">
                    <div class="col-12">
                        <p>&copy; @DateTime.Now.Year Rastislav Ružbacký</p>
                    </div>
                    <div class="col-12">
                        <a href="mailto:vas.email@example.com">ruzbacky@yahoo.com</a>
                        <span class="mx-2">|</span>
                        <a href="tel:+421900123456">+421 948 900 850</a>
                    </div>
                    <div class="col-12">
                        <div class="social-icons">
                            <a class="social-link" href="https://www.facebook.com/profile.php?id=100009882270245" target="_blank" rel="noopener noreferrer" aria-label="Otvoriť Facebook profil Rastislava Ružbackého">
                                <img src="~/Images/FB_icon.png" alt="Facebook" width="24" height="24">
                            </a>
                            <a class="social-link mx-2" href="https://www.instagram.com/rastorubin/" target="_blank" rel="noopener noreferrer" aria-label="Otvoriť Instagram profil Rastislava Ružbackého">
                                <img src="~/Images/Insta_icon.png" alt="Instagram" width="24" height="24">
                            </a>
                            <a class="social-link" href="https://www.linkedin.com/in/rastislav-ruzbacky-99a8a645/" target="_blank" rel="noopener noreferrer" aria-label="Otvoriť LinkedIn profil Rastislava Ružbackého">
                                <img src="~/Images/Linkedin.png" alt="LinkedIn" width="24" height="24">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    @*</div>*@
</body>
</html>
